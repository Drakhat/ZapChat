<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.blogspot.techdroidsz.zapchat.SettingsActivity"
    android:background="#f6b8b8">

    <include layout="@layout/app_bar_layout"
        android:id="@+id/settings_app_bar" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/default_dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/settings_dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display Name"
        android:layout_below="@+id/settings_dp"
        android:id="@+id/settings_display_name"
        android:layout_centerHorizontal="true"
        android:textSize="36sp"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textColor="@android:color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi there! I'm Using ZapChat"
        android:layout_below="@+id/settings_display_name"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="#5e0303"
        android:layout_marginTop="10dp"
        android:id="@+id/settings_status"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHANGE IMAGE"
        android:layout_marginTop="60dp"
        android:background="@drawable/round_button_red"
        android:id="@+id/settings_change_img"
        android:padding="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:textColor="#55505a"
        android:layout_marginStart="42dp"
        android:layout_below="@+id/settings_status"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHANGE STATUS"
        android:id="@+id/settings_change_status"
        android:padding="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#55505a"
        android:background="@drawable/round_button"
        android:layout_marginEnd="34dp"
        android:layout_alignBaseline="@+id/settings_change_img"
        android:layout_alignBottom="@+id/settings_change_img"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
