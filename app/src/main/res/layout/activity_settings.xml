<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.blogspot.techdroidsz.zapchat.SettingsActivity"
    android:background="@color/colorPrimaryDark">

    <include layout="@layout/app_bar_layout"
        android:id="@+id/settings_app_bar" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/default_dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/settings_dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display Name"
        android:layout_below="@+id/settings_dp"
        android:id="@+id/settings_display_name"
        android:layout_centerHorizontal="true"
        android:textSize="36sp"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textColor="@android:color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi there! I'm Using ZapChat"
        android:layout_below="@+id/settings_display_name"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:id="@+id/settings_status"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHANGE IMAGE"
        android:layout_below="@+id/settings_status"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/settings_change_img"
        android:padding="20dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHANGE STATUS"
        android:layout_below="@+id/settings_change_img"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/settings_change_status"
        android:padding="15dp"
        android:background="@color/colorAccent"/>

</RelativeLayout>
